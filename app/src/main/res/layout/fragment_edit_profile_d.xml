<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/frame_layout"
    android:background="@drawable/pagebkg1"
    tools:context=".doctor.EditProfileFragmentD">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="563dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <ScrollView
            android:layout_width="309dp"
            android:layout_height="582dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                android:background="@drawable/custom_edittext1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/lavender"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editName"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="40dp"
                    android:padding="8dp"
                    android:hint="Name"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/ic_baseline_person_25"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editEmail"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Email"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/ic_baseline_email_25"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editPhone"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Phone"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/ic_baseline_phone_25"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editAbout"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="About"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/ic_baseline_info_25"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editAddress"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Address"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/ic_baseline_home_25"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editEducation"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Education"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/baseline_cast_for_education_25"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/editExperience"
                    android:background="@drawable/custom_edittext1"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Experience"
                    android:textColorHint="@color/gray"
                    android:drawableLeft="@drawable/baseline_work_outline_24"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/ic_baseline_lock_25"
                    android:drawablePadding="8dp"
                    android:hint="Password"
                    android:textColorHint="@color/gray"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="@color/black" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="219dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/purple_100"
        android:gravity="center"
        android:text="Save"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

</LinearLayout>